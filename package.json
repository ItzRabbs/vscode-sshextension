{
  "name": "sshextension",
  "displayName": "SSHExtension",
  "description": "Extension for SSH connections using the ftp-simple settings",
  "version": "0.2.1",
  "publisher": "kondratiev",
  "license": "MIT",
  "engines": {
    "vscode": "^1.10.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "ssh",
    "remote"
  ],
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#DDCC99",
    "theme": "light"
  },
  "activationEvents": [
    "onCommand:sshextension.openConnection",
    "onCommand:sshextension.portForwarding",
    "*"
  ],
  "main": "./extension",
  "contributes": {
    "commands": [
      {
        "command": "sshextension.openConnection",
        "title": "Open SSH Connection",
        "category": "SSHExtension"
      },
      {
        "command": "sshextension.portForwarding",
        "title": "SSH Port Forwarding",
        "category": "SSHExtension"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "SSHExtension configuration",
      "properties": {
        "sshextension.customCommands": {
          "type": [
            "array"
          ],
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Specifies custom commands which will execute on session start"
        },
        "sshextension.recentlyUsedForwardings": {
          "type": [
            "array"
          ],
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "In this place stored all saved port forwarding args"
        },
        "sshextension.openProjectCatalog": {
          "type": "boolean",
          "default": false,
          "description": "Open the project directory from the ftp-simple config, if it exists, after starting the SSH session"
        },
        "sshextension.allowMultipleConnections": {
          "type": "boolean",
          "default": false,
          "description": "Allow you open few connections for one server at the same time"
        },
        "sshextension.showHostsInPickLists": {
          "type": "boolean",
          "default": false,
          "description": "Show `user@host` or `name` in pick lists"
        },
        "sshextension.serverList": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Name of server (used for showing in servers list)",
                "required": true
              },
              "username": {
                "type": "string",
                "description": "Username of server",
                "required": true
              },
              "password": {
                "type": "string",
                "description": "Password of server (not required)",
                "required": false
              },
              "host": {
                "type": "string",
                "description": "Host of server",
                "required": true
              },
              "port": {
                "type": "integer",
                "description": "Port of server (not required, default 22)",
                "default": 22
              },
              "privateKey": {
                "type": "string",
                "description": "Path to private key for server (not required)",
                "required": false
              },
              "project": {
                "type": "object",
                "description": "Map project workspace to server (not required)",
                "examples": {
                  "C:/localProject1": "/var/www/remoteProject1",
                  "C:/localProject2": "/var/www/remoteProject2"
                }
              },
              "path": {
                "type": "string",
                "description": "Path on server for `cd` command after session start (not required)",
                "required": false
              }
            }
          },
          "default": []
        }
      }
    }
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "extensionDependencies": [
    "humy2833.ftp-simple"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/VitalyKondratiev/SSHExtension.git"
  },
  "bugs": {
    "url": "https://github.com/VitalyKondratiev/SSHExtension/issues"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^7.0.0",
    "eslint": "^4.6.1",
    "mocha": "^3.5.0",
    "typescript": "^2.5.2",
    "vscode": "^1.1.5"
  },
  "dependencies": {
    "command-exists": "^1.2.2",
    "filewatcher": "^3.0.1",
    "is-path-inside": "^1.0.0",
    "moment": "^2.22.2",
    "upath": "^1.0.0"
  }
}
